# Frontend environment (example)
# Copy to .env.local and fill with your values.

# Backend tool gateway (API Gateway or local)
BACKEND_BASE_URL=https://your-api-gateway.example.com/dev

# HMAC auth for tool requests (server-only)
HMAC_SECRET=REPLACE_WITH_SECRET
HMAC_CLIENT_ID=copilot-frontend

# Postgres (Neon or local)
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# OpenAI (server-only)
OPENAI_API_KEY=sk-REPLACE
OPENAI_MODEL=gpt-4.1
LLM_PLANNER_ENABLED=1
LLM_DEBUG=0

# Clerk
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_REPLACE
CLERK_SECRET_KEY=sk_test_REPLACE

# Logging (off by default)
NEXT_PUBLIC_DEBUG_LOGS=0
# Server debug
DEBUG_LOGS=0

# Tool robustness
ENABLE_TOOL_RETRY=1
TOOL_RETRY_CODES=UNAUTHORIZED,TOOL_FAILURE,EXCEPTION
TOOL_RETRY_DELAY_MS=200

